<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fav_team_bg"
    tools:context=".activies.FavoriteTeam">

    <ImageView
        android:id="@+id/player"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:src="@drawable/player"/>

    <TextView
        android:id="@+id/Select_Fav_Team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="118dp"
        android:fontFamily="@font/salsa"
        android:text="Your Favorite Team"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/ToolbarColor"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/SelectTeam"
        android:scrollbars="vertical"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@id/player">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/MoveToFixture"
        android:onClick="MoveToFixture"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/SelectTeam"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/forward_icon"
        android:shadowColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_below="@+id/player"
        android:layout_marginTop="-100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fav_team_bottom_pic"/>

</RelativeLayout>